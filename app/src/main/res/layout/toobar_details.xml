<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorBackgroundBlue"
    android:elevation="@dimen/dimensElevation_5dp"
    android:layout_height="?attr/actionBarSize">

    <ImageView
        android:id="@+id/img_back_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimens_16dp"
        android:src="@drawable/ic_arrow_back_black_24dp" />

    <TextView
        android:id="@+id/txt_title_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimens_16dp"
        android:layout_toRightOf="@+id/img_back_details"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_regular"
        android:lines="1"
        android:text="Mô tả"
        android:textColor="@color/colorTextWhite"
        android:textSize="@dimen/textSize_16sp" />

</android.support.v7.widget.Toolbar>