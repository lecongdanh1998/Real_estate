<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimens_16dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_user_main"
        android:layout_width="@dimen/dimensHeight_Width_50dp"
        android:layout_height="@dimen/dimensHeight_Width_50dp"
        android:elevation="@dimen/dimensElevation_5dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimens_16dp"
        android:layout_toRightOf="@id/avatar_user_main">

        <TextView
            android:id="@+id/txt_user_details_thamdinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/textSize_16sp" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_user_details_thamdinh"
            android:fontFamily="@font/roboto_thin"
            android:textSize="@dimen/textSize_14sp" />
    </RelativeLayout>

    <RatingBar
        android:id="@+id/rb_rating"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimens_32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:isIndicator="true"
        android:numStars="5"
        android:progressDrawable="@drawable/ratingbar_custom"
        android:stepSize="0.01" />
</RelativeLayout>