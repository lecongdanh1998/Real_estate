<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dimens_10dp"
    android:id="@+id/RelativeLayoutClick"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView

        android:layout_margin="@dimen/dimens_16dp"
        app:cardCornerRadius="@dimen/dimensRadius_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimens_16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatar_user_main_listview"
                    android:layout_width="@dimen/dimensHeight_Width_50dp"
                    android:layout_height="@dimen/dimensHeight_Width_50dp"
                     />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/txt_name_listview_custom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginLeft="@dimen/dimens_10dp"
                    android:layout_toRightOf="@+id/avatar_user_main_listview"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="@dimen/textSize_18sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/img_imagesBackgound_listview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimensHeight_Width_200dp"
                android:layout_marginTop="@dimen/dimens_20dp"
                 />

            <TextView
                android:id="@+id/txt_title_lisivew_custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_20dp"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textColor="@color/colorTextBlack"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/textSize_18sp" />
            <TextView
                android:drawablePadding="@dimen/dimens_5dp"
                android:drawableLeft="@drawable/location"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:id="@+id/txt_address_lisivew_custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/textSize_18sp" />
            <TextView
                android:drawablePadding="@dimen/dimens_5dp"
                android:drawableLeft="@drawable/coins"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:id="@+id/txt_deposit_lisivew_custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/textSize_18sp" />
            <TextView
                android:drawablePadding="@dimen/dimens_5dp"
                android:drawableLeft="@drawable/depositpng"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:id="@+id/txt_depositBuy_lisivew_custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/textSize_18sp" />
            <TextView
                android:drawablePadding="@dimen/dimens_5dp"
                android:drawableLeft="@drawable/hand"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:id="@+id/txt_Sell_lisivew_custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/textSize_18sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>