<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundWhite"
    android:elevation="@dimen/dimensElevation_5dp"
    android:focusableInTouchMode="true"
    tools:context=".View.DetailsMain.DetailsMainActivity">

    <include
        android:id="@+id/toobar_details"
        layout="@layout/toobar_details" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_Submid_details"
        android:layout_below="@+id/toobar_details"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimens_16dp">

                <SeekBar
                    android:id="@+id/seekBar_value_Details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/layout_type_money"
                    android:max="100"
                    android:maxHeight="@dimen/dimens_10dp"
                    android:progressDrawable="@drawable/custom_seekbar"
                    android:secondaryProgress="0"
                    android:splitTrack="false"
                    android:thumb="@drawable/ic_brightness_1_black_24dp"
                    android:thumbOffset="@null" />

                <RelativeLayout
                    android:id="@+id/layout_type_money"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/custom_border_layout"
                    android:padding="@dimen/dimens_10dp">

                    <EditText
                        android:id="@+id/edt_value_money_Details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@id/txt_type_money"
                        android:background="@android:color/transparent"
                        android:cursorVisible="true"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:inputType="numberDecimal|number"
                        android:lines="1"
                        android:scrollbars="vertical"
                        android:selectAllOnFocus="true"
                        android:text="0.1"
                        android:textSize="@dimen/textSize_16sp" />


                    <TextView
                        android:id="@+id/txt_type_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="%"
                        android:textSize="@dimen/textSize_16sp" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:drawablePadding="@dimen/dimens_5dp"
                android:drawableLeft="@drawable/coins"
                android:textColor="@color/colorTextBlack"
                android:id="@+id/txt_tiendautu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dimens_16dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/textSize_16sp" />

            <View
                android:alpha="0.5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dimens_16dp"
                android:layout_marginTop="@dimen/dimens_16dp"
                android:layout_marginRight="@dimen/dimens_32dp"
                android:layout_marginLeft="@dimen/dimens_32dp"
                android:background="@color/colorBackgroundGray" />
            <TextView
                android:drawablePadding="@dimen/dimens_5dp"
                android:drawableLeft="@drawable/coins"
                android:textColor="@color/colorTextBlack"
                android:id="@+id/txt_tiendaututoida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dimens_16dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/textSize_16sp" />

            <View
                android:alpha="0.5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dimens_16dp"
                android:layout_marginTop="@dimen/dimens_16dp"
                android:layout_marginRight="@dimen/dimens_32dp"
                android:layout_marginLeft="@dimen/dimens_32dp"
                android:background="@color/colorBackgroundGray" />


            <TextView
                android:drawablePadding="@dimen/dimens_5dp"
                android:drawableLeft="@drawable/depositpng"
                android:textColor="@color/colorTextBlack"
                android:id="@+id/txt_tiencoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dimens_16dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/textSize_16sp" />

            <View
                android:alpha="0.5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dimens_16dp"
                android:layout_marginTop="@dimen/dimens_16dp"
                android:layout_marginRight="@dimen/dimens_32dp"
                android:layout_marginLeft="@dimen/dimens_32dp"
                android:background="@color/colorBackgroundGray" />

            <TextView
                android:drawablePadding="@dimen/dimens_5dp"
                android:drawableLeft="@drawable/coins"
                android:textColor="@color/colorTextBlack"
                android:id="@+id/txt_dangduoccoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dimens_16dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/textSize_16sp" />

            <View
                android:alpha="0.5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dimens_16dp"
                android:layout_marginTop="@dimen/dimens_16dp"
                android:layout_marginRight="@dimen/dimens_32dp"
                android:layout_marginLeft="@dimen/dimens_32dp"
                android:background="@color/colorBackgroundGray" />

            <TextView
                android:drawablePadding="@dimen/dimens_5dp"
                android:drawableLeft="@drawable/hand"
                android:textColor="@color/colorTextBlack"
                android:id="@+id/txt_tienmua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dimens_16dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/textSize_16sp" />


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_Submid_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/dimens_16dp"
        android:layout_marginRight="@dimen/dimens_16dp"
        android:layout_marginBottom="@dimen/dimens_16dp"
        android:background="@drawable/button_border"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:text="@string/txt_submit"
        android:textAllCaps="false"
        android:textColor="@color/colorTextWhite"
        android:textSize="@dimen/textSize_16sp" />
</RelativeLayout>