<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".View.DetailsMain.DetailsMainActivity">

    <RelativeLayout
        android:id="@+id/toobar_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/toobar_details" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toobar_details"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimensHeight_Width_280dp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewPager_details"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimensHeight_Width_200dp"
                    android:layout_gravity="bottom"
                    android:clipToPadding="false"
                    android:overScrollMode="never" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <RelativeLayout
                        android:layout_width="@dimen/dimensHeight_Width_150dp"
                        android:layout_height="@dimen/dimensHeight_Width_150dp"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/custombackgroundwhite"
                        android:elevation="@dimen/dimensElevation_5dp"
                        android:padding="@dimen/dimens_5dp">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/dimensHeight_Width_150dp"
                            android:layout_height="@dimen/dimensHeight_Width_150dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/trump" />

                        <RelativeLayout
                            android:layout_width="@dimen/dimensHeight_Width_150dp"
                            android:layout_height="@dimen/dimensHeight_Width_150dp"
                            android:layout_centerInParent="true"
                            android:alpha="0.4"
                            android:background="@drawable/custombackgroundblack"></RelativeLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/dimensHeight_Width_150dp"
                            android:layout_height="@dimen/dimensHeight_Width_150dp"
                            android:layout_centerInParent="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <TextView
                                    android:id="@+id/txt_tienmua"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:textColor="@color/colorTextWhite"
                                    android:textSize="@dimen/textSize_25sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="@dimen/dimens_5dp"
                                    android:layout_toRightOf="@+id/txt_tienmua"
                                    android:src="@drawable/ic_monetization_on_yellow_24dp" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_songuoidautu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dimens_16dp"
                android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                android:drawablePadding="@dimen/dimens_10dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/textSize_16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dimens_32dp"
                android:layout_marginTop="@dimen/dimens_16dp"
                android:layout_marginRight="@dimen/dimens_32dp"
                android:layout_marginBottom="@dimen/dimens_16dp"
                android:alpha="0.2"
                android:background="@color/colorBackgroundGray" />

            <TextView
                android:id="@+id/txt_time_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dimens_16dp"
                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                android:drawablePadding="@dimen/dimens_10dp"
                android:fontFamily="@font/roboto_regular"
                android:text="10h00"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/textSize_16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dimens_32dp"
                android:layout_marginTop="@dimen/dimens_16dp"
                android:layout_marginRight="@dimen/dimens_32dp"
                android:layout_marginBottom="@dimen/dimens_16dp"
                android:alpha="0.2"
                android:background="@color/colorBackgroundGray" />

            <TextView
                android:id="@+id/txt_description_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dimens_16dp"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="@dimen/dimens_10dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Donald Trump"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/textSize_16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dimens_32dp"
                android:layout_marginTop="@dimen/dimens_16dp"
                android:layout_marginRight="@dimen/dimens_32dp"
                android:layout_marginBottom="@dimen/dimens_16dp"
                android:alpha="0.2"
                android:background="@color/colorBackgroundGray" />

            <TextView
                android:id="@+id/txt_address_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dimens_16dp"
                android:drawableLeft="@drawable/address"
                android:drawablePadding="@dimen/dimens_10dp"
                android:fontFamily="@font/roboto_regular"
                android:text="109 Hàm Nghi, TP Đông Hà, Quảng Trị (gần Chợ Phường 5)"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/textSize_16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dimens_32dp"
                android:layout_marginTop="@dimen/dimens_16dp"
                android:layout_marginRight="@dimen/dimens_32dp"
                android:layout_marginBottom="@dimen/dimens_16dp"
                android:alpha="0.2"
                android:background="@color/colorBackgroundGray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimens_16dp">

                <TextView
                    android:id="@+id/txt_tiencoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/depositpng"
                    android:drawablePadding="@dimen/dimens_10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/textSize_16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_5dp"
                    android:layout_toRightOf="@+id/txt_tiencoc"
                    android:src="@drawable/ic_monetization_on_black_24dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dimens_32dp"
                android:layout_marginTop="@dimen/dimens_16dp"
                android:layout_marginRight="@dimen/dimens_32dp"
                android:layout_marginBottom="@dimen/dimens_16dp"
                android:alpha="0.2"
                android:background="@color/colorBackgroundGray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimens_16dp">

                <TextView
                    android:id="@+id/txt_dangduoccoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/coins"
                    android:drawablePadding="@dimen/dimens_10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/textSize_16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_5dp"
                    android:layout_toRightOf="@+id/txt_dangduoccoc"
                    android:src="@drawable/ic_monetization_on_black_24dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dimens_32dp"
                android:layout_marginTop="@dimen/dimens_16dp"
                android:layout_marginRight="@dimen/dimens_32dp"
                android:layout_marginBottom="@dimen/dimens_16dp"
                android:alpha="0.2"
                android:background="@color/colorBackgroundGray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimens_16dp">

                <SeekBar
                    android:id="@+id/seekBar_value_Details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/layout_type_money"
                    android:max="100"
                    android:maxHeight="@dimen/dimens_10dp"
                    android:progressDrawable="@drawable/custom_seekbar"
                    android:secondaryProgress="0"
                    android:splitTrack="false"
                    android:thumb="@drawable/ic_brightness_1_black_24dp"
                    android:thumbOffset="@null" />

                <RelativeLayout
                    android:id="@+id/layout_type_money"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/custom_border_layout"
                    android:padding="@dimen/dimens_10dp">

                    <EditText
                        android:id="@+id/edt_value_money_Details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@id/txt_type_money"
                        android:background="@android:color/transparent"
                        android:cursorVisible="true"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:inputType="numberDecimal|number"
                        android:lines="1"
                        android:scrollbars="vertical"
                        android:selectAllOnFocus="true"
                        android:text="0.1"
                        android:textSize="@dimen/textSize_16sp" />


                    <TextView
                        android:id="@+id/txt_type_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="%"
                        android:textSize="@dimen/textSize_16sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimens_16dp">

                <TextView
                    android:id="@+id/txt_tiendautu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/coins"
                    android:drawablePadding="@dimen/dimens_10dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/textSize_16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_5dp"
                    android:layout_toRightOf="@+id/txt_tiendautu"
                    android:src="@drawable/ic_monetization_on_black_24dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dimens_32dp"
                android:layout_marginTop="@dimen/dimens_16dp"
                android:layout_marginRight="@dimen/dimens_32dp"
                android:layout_marginBottom="@dimen/dimens_16dp"
                android:alpha="0.2"
                android:background="@color/colorBackgroundGray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimens_16dp">

                <TextView
                    android:id="@+id/txt_tiendaututoida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/coins"
                    android:drawablePadding="@dimen/dimens_10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/textSize_16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_5dp"
                    android:layout_toRightOf="@+id/txt_tiendaututoida"
                    android:src="@drawable/ic_monetization_on_black_24dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dimens_32dp"
                android:layout_marginTop="@dimen/dimens_16dp"
                android:layout_marginRight="@dimen/dimens_32dp"
                android:layout_marginBottom="@dimen/dimens_16dp"
                android:alpha="0.2"
                android:background="@color/colorBackgroundGray" />

            <Button
                android:id="@+id/btn_Submid_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/dimens_16dp"
                android:background="@drawable/button_border"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="@string/txt_submit"
                android:textAllCaps="false"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/textSize_16sp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/LNTlayoutDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/placeholder_bg1">

        <View
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorBackgroundBlue"></View>
    </LinearLayout>

</RelativeLayout>