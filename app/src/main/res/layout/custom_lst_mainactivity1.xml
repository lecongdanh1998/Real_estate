<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayoutClick"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTextGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="50dp"
                android:background="@color/colorBackgroundWhite" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_imagesBackgound_listview"
                android:layout_width="@dimen/dimensHeight_Width_100dp"
                android:layout_height="@dimen/dimensHeight_Width_100dp"
                android:layout_marginLeft="@dimen/dimens_16dp"
                android:layout_marginTop="@dimen/dimens_16dp"
                android:scaleType="fitXY"
                android:src="@drawable/backgroundtest"
                app:riv_border_color="@android:color/transparent"
                app:riv_corner_radius="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_16dp"
                android:fontFamily="@font/roboto_medium"
                android:text="7,5 tá»·"
                android:textColor="@color/colorTextBlue"
                android:textSize="@dimen/textSize_20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dimens_16dp"
                android:layout_marginRight="@dimen/dimens_16dp"
                android:fontFamily="@font/roboto_regular"
                android:text="14/09/2018"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/dimens_14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="@dimen/dimens_16dp"
                android:background="@drawable/background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_10dp"
                    android:layout_marginRight="@dimen/dimens_10dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="440m2"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="@dimen/textSize_16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center"
                            android:text="5"
                            android:textColor="@color/colorTextBlack"
                            android:textSize="@dimen/textSize_16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center"
                            android:text="@string/txt_phongngu"
                            android:textColor="@color/colorTextBlack"
                            android:textSize="@dimen/textSize_14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center"
                            android:text="5"
                            android:textColor="@color/colorTextBlack"
                            android:textSize="@dimen/textSize_16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center"
                            android:text="@string/txt_phongtam"
                            android:textColor="@color/colorTextBlack"
                            android:textSize="@dimen/textSize_14sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dimens_10dp"
                    android:layout_marginBottom="@dimen/dimens_10dp"
                    android:alpha="0.2"
                    android:background="@color/colorBackgroundGray" />

                <TextView
                    android:id="@+id/txt_address_lisivew_custom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_regular"
                    android:lines="2"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/textSize_16sp" />

            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimens_32dp"
                android:layout_marginTop="150dp"
                android:id="@+id/fab_address"
                android:layout_gravity="right"
                app:backgroundTint="@color/colorBackgroundWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/location1"
                />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>