<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorBackgroundBlue"
    android:elevation="@dimen/dimensElevation_5dp">

    <RelativeLayout
        android:layout_marginLeft="@dimen/dimens_16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/edt_find"
            android:imeOptions="actionDone"
            android:selectAllOnFocus="true"
            android:textColorHint="@color/colorTextWhite"
            android:inputType="text"
            android:hint="@string/txt_chonkhuvuc"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/textSize_16sp"
            android:fontFamily="@font/roboto_regular"
            android:drawableLeft="@drawable/searching1"
            android:drawablePadding="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:backgroundTint="@android:color/transparent"
            android:layout_toLeftOf="@+id/img_sort"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimensHeight_Width_56dp"
            />
        <ImageView
        android:src="@drawable/filterpng"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimens_16dp"
        android:id="@+id/img_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>